set nocompatible

set number
set ruler
set backspace=indent,eol,start
set history=100
set showcmd
set showmode
set autoread
set hidden
syntax on

set noswapfile
set nobackup
set nowb

set smartindent
set shiftwidth=4
set tabstop=4
set noexpandtab
filetype plugin on
filetype indent on
set nowrap
set linebreak

set scrolloff=8
set sidescrolloff=15
set sidescroll=1

set incsearch
set hlsearch
set ignorecase
set smartcase
